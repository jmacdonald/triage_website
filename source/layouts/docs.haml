!!!
%html
  %head
    %meta{:charset => "utf-8"}
      / Always force latest IE rendering engine or request Chrome Frame
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        / Use title if it's in the page YAML frontmatter
        %title= data.page.title || "Triage"
        = stylesheet_link_tag "bootstrap.min", "common", "docs"
        = javascript_include_tag "bootstrap.min", "all"
  %body{:class => page_classes}
    .container
      .header
        .container
          .row
            .span6
              %h3
                Triage Documentation
            .span3.right
              %ul
                %li
                  = link_to '/docs.html'

            .span3.center
              %img{ src: '/images/logo_small.png' }
      .page
        = yield

        .footer
          %hr
          .right
            %small
              &copy; 2013 Jordan MacDonald
